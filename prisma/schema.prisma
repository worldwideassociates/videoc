// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Account {
  id        String @id @default(uuid())
  user_id   String @default(uuid())
  firstName String
  lastName  String
  role      Role
}

enum Role {
  CUSTOMER
  ADMIN
  EMPLOYEE
}
